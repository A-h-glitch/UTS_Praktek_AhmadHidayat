#include <iostream>
using namespace std;

void segitigaBintang(int n) {
    for (int i = 1; i <= n; ++i) {
        for (int j = 1; j <= i; ++j) {
            cout << "*";
        }
        cout << endl;
    }
}

int main() {
    int n;
    cout << "Masukkan tinggi segitiga: ";
    cin >> n;
    segitigaBintang(n);
    return 0;
}
